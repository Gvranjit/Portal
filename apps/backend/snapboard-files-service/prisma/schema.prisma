generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Snap[]
}

model Snap {
  id          Int         @id @default(autoincrement())
  title       String?
  filename    String
  mimeType    String
  size        Int
  createdBy   User        @relation(fields: [createdById], references: [id])
  createdById Int
  createdAt   DateTime    @default(now())
  thumbnails  Thumbnail[]
}

model Thumbnail {
  id       Int    @id @default(autoincrement())
  snap     Snap   @relation(fields: [snapId], references: [id])
  snapId   Int    @unique
  filename String
  mimeType String
  size     String
}
